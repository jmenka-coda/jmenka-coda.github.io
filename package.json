{
  "name": "canvas-drawing-app",
  "version": "1.0.0",
  "description": "Онлайн рисовалка с совместным рисованием в комнатах",
  "main": "server.js",
  "engines": {
    "node": ">=14.0.0"
  },
  "scripts": {
    "start": "cross-env NODE_ENV=production node src/server/server.js",
    "dev": "cross-env NODE_ENV=development nodemon src/server/server.js",
    "debug": "cross-env NODE_ENV=development DEBUG=* nodemon src/server/server.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "eslint src/**/*.js routes/**/*.js",
    "format": "prettier --write \"src/**/*.js\" \"routes/**/*.js\" \"public/js/**/*.js\"",
    "clean": "rm -rf node_modules package-lock.json && npm install",
    "db:stats": "node scripts/database-manager.js stats",
    "db:cleanup": "node scripts/database-manager.js cleanup",
    "db:reset": "node scripts/database-manager.js reset"
  },
  "keywords": [
    "canvas",
    "drawing",
    "socket.io",
    "paper.js",
    "realtime",
    "collaboration"
  ],
  "author": "Paper.js Drawing App Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/canvas-drawing-app.git"
  },
  "dependencies": {
    "bcryptjs": "^3.0.3",
    "cookie-parser": "^1.4.7",
    "express": "^4.18.2",
    "socket.io": "^4.7.2",
    "sqlite3": "^5.1.7",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "eslint": "^8.57.0",
    "nodemon": "^3.0.1",
    "prettier": "^3.1.0"
  },
  "nodemonConfig": {
    "watch": [
      "src",
      "routes",
      "config",
      "views",
      "src/server/server.js"
    ],
    "ext": "js,json,html,css",
    "ignore": [
      "node_modules",
      "public",
      "*.log"
    ]
  }
}
