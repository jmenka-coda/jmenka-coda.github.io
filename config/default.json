{
  "server": {
    "port": 4000,
    "host": "0.0.0.0",
    "env": "development"
  },
  "socket": {
    "cors": {
      "origin": "*",
      "methods": ["GET", "POST"]
    }
  },
  "rooms": {
    "maxNameLength": 50,
    "minNameLength": 2,
    "cleanupInterval": 300000,
    "activeRoomTimeout": 172800000,
    "inactiveRoomTimeout": 3600000
  },
  "drawing": {
    "maxStrokePoints": 1000,
    "maxStrokesPerRoom": 5000
  }
}
